<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"> <!--задают ширину и высоту элемента RelativeLayout-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"> <!--"vertical" - указывает, что элементы внутри LinearLayout будут располагаться друг под другом по вертикали-->
        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/rectangle_green"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"> <!--"center" - выравнивает изображение по центру-->
            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/rectangle_green"/>
            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/circle_red"/>
            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/rectangle_green"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>